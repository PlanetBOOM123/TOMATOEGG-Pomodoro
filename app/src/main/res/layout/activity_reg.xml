<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danYellow"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="80dp"
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo1" />
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Friend ~" />


    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/touxiang" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@null"
            android:textColor="@color/black"
            android:textColorHint="@color/Yellow2"
            android:hint="请输入账号"
            android:inputType="textPersonName" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/password" />
        <!--        android:text="A5260782"-->
        <EditText
            android:id="@+id/et_password1"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@null"
            android:textColor="@color/black"
            android:textColorHint="@color/Yellow2"
            android:hint="请输入密码" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/password" />
        <EditText
            android:id="@+id/et_password2"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@null"
            android:textColor="@color/black"
            android:textColorHint="@color/Yellow2"
            android:hint="请再次输入密码" />

    </LinearLayout>


    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/btn_reg"
        android:background="@drawable/button_write"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#FFF7C824"
        android:text="注    册"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_back"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFE37017"
        android:textStyle="bold"
        android:text="返    回" />


</LinearLayout>